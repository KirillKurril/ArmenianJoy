                    CommandParameter="11"/>


            </Grid>

            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="0.42*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.35*"/>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="0.08*"/>
                        <RowDefinition Height="0.35*"/>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="0.00*"/>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="1.0*"/>
                    </Grid.RowDefinitions>
                    <Label
                        Style="{StaticResource InfoLabel}"
                        Grid.Row="0"
                        Text="White score:"/>
                    <Label
                        Grid.Row="1"
                        Style="{StaticResource InfoLabel}"
                        Text="{Binding WhiteScore}"/>
                    <Label
                        Style="{StaticResource InfoLabel}"
                        Grid.Row="3"
                        Text="Black score:"/>
                    <Label
                        Style="{StaticResource InfoLabel}"
                        Grid.Row="4"
                        Text="{Binding BlackScore}"/>

                    
                    <Button 
                        Grid.Row="6"
                        Text="Сброс"
                        Command="{Binding PositionSelectedCommand}"
                        Style="{StaticResource ThrowButtonStyle}"
                        CommandParameter="25"/>


                    <Ellipse 
                         Grid.Row="9"
                         WidthRequest="30"
                         HeightRequest="30"
                         BackgroundColor="{Binding MoveColor, Converter={StaticResource MoveColorConverter}}"/>

                    <Grid
                        Grid.Row="11">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="8*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="15*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="15*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Image
                            Grid.Column="1"
                            Grid.Row="1"
                            Source="{Binding FirstDiceValue, Converter={StaticResource DiceImageConverter}}"
                            Aspect="AspectFit"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>
                        <Image
                            Grid.Column="1"
                            Grid.Row="3"
                            Source="{Binding SecondDiceValue, Converter={StaticResource DiceImageConverter}}"
                            Aspect="AspectFit"
                            HorizontalOptions="Center"
