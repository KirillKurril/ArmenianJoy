                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <StackLayout Grid.Row="0"
                    Grid.Column="0"
                    BindableLayout.ItemsSource="{Binding EllipseCollections[23]}"
                    BindableLayout.ItemTemplateSelector="{StaticResource EllipseSelector}">
                </StackLayout>
                
                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource PositionButtonStyle}"
