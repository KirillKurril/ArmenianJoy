                    BindableLayout.ItemTemplateSelector="{StaticResource EllipseSelector}">
                </StackLayout>

                <Button
                    Grid.Row="1"
                    Grid.Column="11"
                    Style="{StaticResource PositionButtonStyle}"
                    Command="{Binding PositionSelectedCommand}"
                    CommandParameter="10"/>



                <StackLayout Grid.Row="1"
                    Grid.Column="12"
